{
  "name": "dchat",
  "version": "1.0.0",
  "description": "Messaging application for Ethereum accounts",
  "scripts": {
    "accounts": "npm run accounts -w @dchat/hardhat",
    "node": "npm run node -w @dchat/hardhat",
    "clean": "npm run clean -w @dchat/hardhat",
    "compile": "npm run compile -w @dchat/hardhat",
    "coverage": "npm run coverage -w @dchat/hardhat",
    "test": "npm run test -w @dchat/hardhat",
    "verify": "npm run verify -w @dchat/hardhat",
    "dev": "npm run dev -w @dchat/next-app",
    "build": "npm run build -w @dchat/next-app",
    "start": "npm run start -w @dchat/next-app",
    "lint": "npm run lint -w @dchat/next-app"
  },
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/hardhat",
      "**/hardhat/**"
    ]
  }
}
